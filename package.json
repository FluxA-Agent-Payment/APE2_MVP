{
  "name": "aep2-mvp",
  "version": "1.0.0",
  "description": "Agent Embedded Payment v2 MVP",
  "scripts": {
    "compile": "hardhat compile",
    "deploy": "hardhat run scripts/deploy.ts --network baseSepolia",
    "setup": "hardhat run scripts/setup.ts --network baseSepolia",
    "deposit": "hardhat run scripts/deposit.ts --network baseSepolia",
    "addresses": "ts-node scripts/get-addresses.ts",
    "sp": "ts-node services/sp-v2.ts",
    "sp-old": "ts-node services/sp.ts",
    "payee": "ts-node services/payee.ts",
    "faucet": "ts-node services/faucet.ts",
    "client": "ts-node services/client.ts",
    "test": "hardhat test",
    "build": "tsc",
    "build:playground": "cd playground && npm run build",
    "build:all": "npm run build && npm run build:playground",
    "pm2:start": "npm run build:all && pm2 start ecosystem.config.js",
    "pm2:stop": "pm2 stop ecosystem.config.js",
    "pm2:restart": "pm2 restart ecosystem.config.js",
    "pm2:delete": "pm2 delete ecosystem.config.js",
    "pm2:logs": "pm2 logs",
    "pm2:status": "pm2 status",
    "solana:build": "cd contracts/solana && anchor build",
    "solana:deploy": "cd contracts/solana && anchor deploy",
    "solana:test": "cd contracts/solana && anchor test",
    "solana:init": "node scripts/solana/init-program.mjs",
    "solana:authorize-sp": "ts-node scripts/solana/authorize-sp.ts",
    "solana:create-usdc": "ts-node scripts/solana/create-test-usdc.ts",
    "sp:solana": "ts-node services/sp-solana.ts",
    "payee:solana": "ts-node services/payee-solana.ts",
    "faucet:solana": "ts-node services/faucet-solana.ts",
    "client:solana": "ts-node services/client-solana.ts",
    "start:solana": "./start-solana.sh",
    "stop:solana": "./stop-solana.sh",
    "test:solana": "ts-node scripts/solana/test-flow.ts"
  },
  "keywords": [
    "payment",
    "agent",
    "web3"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^4.0.0",
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.0",
    "hardhat": "^2.19.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "@coral-xyz/anchor": "^0.30.1",
    "@openzeppelin/contracts": "^5.0.0",
    "@solana/spl-token": "^0.4.8",
    "@solana/web3.js": "^1.95.0",
    "better-sqlite3": "^12.4.1",
    "bs58": "^5.0.0",
    "dotenv": "^16.3.1",
    "ethers": "^6.9.0",
    "express": "^4.18.2",
    "node-fetch": "^3.3.2",
    "tweetnacl": "^1.0.3"
  },
  "optionalDependencies": {
    "@types/better-sqlite3": "^7.6.13"
  }
}
